<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luckin.dao.ProductDao">
    <!--插入商品信息-->
    <insert id="insert" parameterType="com.luckin.dao.entity.Product">
        INSERT INTO t_product(name,type_id,brand_name,description,stock,price,point,create_admin_id)
        VALUES(#{name},#{typeID},#{brandName},#{description},#{stock},#{price},#{point},#{createAdminId});
    </insert>
    <!--查询所有商品信息-->
    <select id="findAllProduct" resultType="com.luckin.dao.entity.Product">
        SELECT * FROM t_product;
    </select>
    <!--更新商品信息-->
    <update id="update" parameterType="com.luckin.dao.entity.Product">
        UPDATE t_product SET
        name=#{name},
        type_id=#{typeID},
        description=#{description},
        brand_name=#{brandName},
        stock=#{stock},
        price=#{price},
        point=#{point},
        create_time=#{createTime},
        create_admin_id=#{createAdminId},
        modify_time=#{modifyTime},
        modify_admin_id=#{modifyAdminId},
        status=#{status},
        WHERE id=#{id};
    </update>
    <!--通过商品ID查看商品图片信息-->
    <select id="findImageByID" resultType="com.luckin.dao.entity.ProductImage">
        SELECT * FROM t_product_image WHERE product_id=#{productID};
    </select>
    <!--通过商品ID查看商品主图图片信息-->
    <select id="findMainImageByID" resultType="com.luckin.dao.entity.ProductImage">
        SELECT * FROM t_product_image WHERE product_id=#{productID} and is_main=1;
    </select>
</mapper>