<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luckin.dao.AdminDao">
    <!--查询管理员信息-->
    <select id="findByUsername" parameterType="java.lang.String" resultType="com.luckin.dao.entity.Admin">
        SELECT * FROM t_admin WHERE username = #{username}
    </select>

    <!--查询管理员的权限-->
    <select id="findPermissionByUsername" parameterType="java.lang.String" resultType="com.luckin.dao.entity.Permission">
        SELECT p.*
        FROM t_admin a, t_admin_role ar, t_role_permission rp, t_permission p
        WHERE a.id = ar.admin_id and ar.role_id = rp.role_id and rp.permission_id = p.id
        and a.username = #{username}
    </select>
</mapper>